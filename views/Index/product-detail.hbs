        </ul>
      </nav>

    <!-- Responsive Navbar-->
    <section class="menu-btn">+</section>

    <!-- PRODUCTS -->
    <div class="small-container single-product">
        <div class="row">
            <div class="col-2">
                <img src="/{{product.ProductImage}}" alt="" width="500" height="400" id="ProductImg">
                <div class="small-img-row">
                    <div class="small-img-col">
                        <img src="/seedbeds5.jpg" alt="" width="100%" class="small-img">
                    </div>
                    <div class="small-img-col">
                        <img src="/seedbeds3.jpg" alt="" width="100%" class="small-img">
                    </div>
                    <div class="small-img-col">
                        <img src="/seedbeds4.jpg" alt="" width="100%" class="small-img">
                    </div>
                    <div class="small-img-col">
                        <img src="/seedbeds5.jpg" alt="" width="100%" class="small-img">
                    </div>
                </div>
            </div>
            <div class="col-2">
                <h1>{{product.ProductName}}</h1>
                <h4>{{product.ProductPrice}}/per piece</h4>
                <select>
                    <option>Select Day-Old</option>
                    <option>10-15</option>
                    <option>15-20</option>
                    <option>20-25</option>
                    <option>25-30</option>
                    <option>30-35</option>
                </select>
                <input type="number" value="1">
                {{!-- <form action="/add-to-cart/{{product._id}}" method="GET"> --}}
                <form action="/add-to-cart" method="POST">
                        <input type="hidden" id="productid" name="productid" value={{product._id}}>
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                 </form>
                <h3>Product Details <i class="fa fa-indent"></i></h3>
                <p>{{product.ProductDescription}}</p>
            </div>
        </div>
    </div>
  
