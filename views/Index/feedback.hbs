  <title>HortiGrow</title>
  <link rel="shortcut icon" type="image/x-icon" href="/fav.ico">


   <script>
    function start() {
      //Push.create('Hello World!')
      Push.create("HortiGrow", {
        body: "Thank you for Feedback!",
        icon: 'https://banner2.cleanpng.com/20180411/eoq/kisspng-leaf-plant-logo-root-plant-5ace75f3a9ada5.454160361523480051695.jpg',
        timeout: 3000,
        onClick: function(){
          window.focus();
          this.close();
        }
      });
    }
  </script>
  
</head>

<body>

    <article class="container">

    <!-- Navbar -->
      <nav>
        <ul>
          <li><a href="/index">Home</a></li>
          <li><a href="/Index/shop">Shop</a></li>
          <li><a href="/Index/feedback">Feedback</a></li>
          <li>
            <a href="/Index/cart"><i class="fa fa-shopping-cart"></i></a>
          </li>
          <li>
            <a href="#"><i class="fa fa-user"></i></a>
             <ul class="listRight">
              <li style="padding-left: -10px;"><a href="/Index/Profile">Profile</a></li>
              <li style="padding-left: -10px;"><a href="/Index/orderhistory">Orders</a></li>
              <li><a href="/Index/signInUser">Logout</a></li>
            </ul>
          </li>
        </ul>
      </nav>

    <!-- Responsive Navbar-->
    <section class="menu-btn">+</section>

    <!-- FEEDBACK SECTION-->
    <section class="form-cart">
      <h2>Feedback</h2>
      <p>Water our plants with your feedback.</p>
      <div class="row">
        <div class="col-75">
          <div class="container">
            <form action="/Index/feed" method="POST">
              <div class="row">
                <div class="col-50">
                  <label for="fname"
                    ><i class="fa fa-user"></i> Full Name</label
                  >
                  <input
                    type="text"
                    id="fname"
                    name="firstname"
                    placeholder="John M. Doe"
                    value={{user.UserFullname}}
                  />
                  <label for="email"
                    ><i class="fa fa-envelope"></i> Email</label
                  >
                  <input
                    type="email"
                    id="email"
                    name="email"
                    placeholder="john@example.com"
                    value={{user.Email}}
                  />
                  <label for="adr"
                    ><i class="fa fa-address-card-o"></i> Comments</label
                  >
                  <input
                    type="text"
                    id="adr"
                    name="Comments"
                    placeholder="Very nice Website......"
                  />
                
                </div>
              </div>
              <a href="javascript:void(0)" onclick="start();">Home</a>
              <input   type="submit" value="Submit Feedback" class="btn" />

            </form>
          </div>
        </div>
        
      </div>
    </section>
    </article>
    <!-- Footer-->
    <footer>HortiGrow &copy; 2021</footer>

  <script src="/main.js">
  </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
