<style>
html {
  scroll-behavior: smooth;
}
/*For form and items*/
* {
  box-sizing: border-box;
}

body {
  margin: 0;
}

/* Navigation menu */

nav {
  z-index: 10;
  padding: 24px 16px;
  font-family: "Raleway";
  /* position: fixed; */
  width: 100%;
  transition: 0.6s;
}

nav {
  background: #172830;
  box-shadow: 0px 4px 4px 0px rgba(50, 50, 50, 0.1);
}

/* nav {
  height: 70px;
} */

nav ul {
  display: flex;
  justify-content: flex-end;
  list-style: none;
}

nav ul a {
  text-decoration: none;
  color: #fff;
  font-weight: 100px;
  font-family: "Cormorant Garamond", serif;
  margin: 0 28px;
  font-size: 16px;
  text-transform: uppercase;
}

/* Menu Icon */
.menu-btn {
  display: none;
}

/* Footer */

footer {
  padding: 32px 0;
  background: #dcedc8;
  color: #000;
  font-family: "Raleway";
  text-align: center;
}

/* Responsive layout - when the screen is less than 800px wide, make the two columns stack on top of each other instead of next to each other (also change the direction - make the "cart" column go on top) */
@media (max-width: 800px) {
  .row {
    flex-direction: column-reverse;
  }
  .col-25 {
    margin-bottom: 20px;
  }

  /*Navigation*/
  nav {
    display: flex;
    height: 100vh;
    transform: scaleY(0) translateY(1200px);
    background: #172830;
    transition: 0.4s;
    position: fixed;
  }

  nav.active {
    transform: scaleY(1) translateY(0px);
  }

  nav ul {
    margin: 0 auto;
    align-items: center;
    flex-direction: column;
    justify-content: center;
  }

  nav ul li {
    padding: 42px 0;
  }

  nav li a {
    font-size: 20px;
    position: relative;
  }

  nav li a:after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    height: 24px;
    width: 60%;
    margin: 0 auto;
    border-bottom: 1px solid black;
  }

  .menu-btn {
    z-index: 10;
    color: #474747;
    display: block;
    position: fixed;
    right: 16px;
    top: 16px;
    font-size: 40px;
    transition: 0.4s;
    font-family: "Roboto Slab";
    cursor: pointer;
    transform: rotate(0deg);
  }

  .menu-btn.active {
    transform: rotate(45deg);
  }
}

