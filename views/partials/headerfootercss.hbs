    margin: 0 28px;
    font-size: 17px;
    text-transform: uppercase;
  }
  
  /*=====DROPDOWN===*/
  ul {
    text-align: left;
    display: inline;
    margin: 0;
    padding: 15px 4px 17px 0;
    list-style: none;
  }
  ul li {
    font: bold 12px/18px sans-serif;
    display: inline-block;
    margin-right: -4px;
    position: relative;
    padding: 15px 20px;
    /* background: #172830; */
    cursor: pointer;
    -webkit-transition: all 0.2s;
    -moz-transition: all 0.2s;
    -ms-transition: all 0.2s;
    -o-transition: all 0.2s;
    transition: all 0.2s;
  }
  ul li:hover {
    /* background: #172830; */
    color: #666;
  }
  ul li ul {
    padding: 0;
    position: absolute;
    top: 48px;
    left: 0;
    width: 150px;
    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;
    display: none;
    opacity: 0;
    visibility: hidden;
    /* -webkit-transiton: opacity 0.2s;
    -moz-transition: opacity 0.2s;
    -ms-transition: opacity 0.2s;
    -o-transition: opacity 0.2s; */
    -transition: opacity 0.2s;
  }
  ul li ul li {
    background: #172830;
    display: block;
    color: #fff;
    text-shadow: 0 -1px 0 #000;
  }
  ul li ul li:hover {
    background: grey;
  }
  ul li:hover ul {
    display: block;
    opacity: 1;
    visibility: visible;
  }
  .listRight {
    left: auto !important;
    right: 0 !important;
  }
  
  /*===DROPDOWN ENDS====*/

/* Menu Icon */
.menu-btn {
